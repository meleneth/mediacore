<h1>Listing episodes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Episode no</th>
    <th>Season no</th>
    <th>Series</th>
    <th>Imdb</th>
    <th>Original air date</th>
    <th>Synopsis</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @episodes.each do |episode| %>
  <tr>
    <td><%= episode.name %></td>
    <td><%= episode.episode_no %></td>
    <td><%= episode.season_no %></td>
    <td><%= episode.series_id %></td>
    <td><%= episode.imdb_id %></td>
    <td><%= episode.original_air_date %></td>
    <td><%= episode.synopsis %></td>
    <td><%= link_to 'Show', episode %></td>
    <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
    <td><%= link_to 'Destroy', episode, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

